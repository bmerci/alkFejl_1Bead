{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>A versenyen résztvevő csapatok</h1>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Csapatnév</th>
            <th>Első játékos</th>
            <th>Második játékos</th>
        </tr>   
    </thead>
    <tbody>
        {{#each groups}}
        <tr>
            <td>{{name}}</td>
            {{!--<td><span class="label label-{{statusClass}}">{{statusText}}</span></td>--}}
            <td>{{firstMemberName}}</td>
            <td>{{secondMemberName}}</td>
            <td><a class="btn btn-danger btn-sm torles-gomb" href="/groups/delete/{{id}}" role="button">Törlés</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/groups/new" class="btn btn-default">Új csapat felvitele</a></p>